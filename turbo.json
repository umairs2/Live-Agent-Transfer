{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["build/**"],
      "inputs": [
        "src/**",
        ":!src/**/*.test.ts",
        "package.json",
        "tsconfig.json",
        "vite.config.json"
      ],
      "dependsOn": ["^build"]
    },
    "test:dependencies": {
      "inputs": ["src/**/*.test.ts", "package.json", "jest.config.js"]
    },
    "test:unit": {
      "outputs": ["sonar/coverage/**/*"],
      "inputs": ["src/**/*.test.ts", "package.json", "jest.config.js"]
    },
    "test:types": {
      "outputs": [],
      "inputs": ["src/**/*.test-d.ts", "package.json"]
    },
    "lint": {
      "inputs": ["src/**"],
      "outputs": []
    },
    "lint:fix": {
      "inputs": ["src/**"],
      "outputs": ["src/**"]
    },
    "lint:report": {
      "outputs": ["sonar/report.json"]
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
